

@model ModelEmpleados

@{
    List<string> oficios = ViewData["OFICIOS"] as List<string>;

}

<h1>Incremento Salarial Empleados</h1>

<form method="post">
    <label>Oficios</label>
    <select name="oficio" class="form-control">
        @foreach(string ofi in oficios)
        {
           <option value="@ofi">@ofi</option>
        }
    </select>
    <label>Incremento salarial</label>
    <input type="text" name="incremento" class="form-control"required/>
    <button class="btn btn-info"> Incrementar salarios </button>
</form>

@if(Model != null)
{
    <h1 style="color:blue">
        Suma salarial: @Model.SumaSalarial
    </h1>
    <h1 style="color:red">
        Media salarial: @Model.MediaSalarial
    </h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Empleado emp in Model.Empleados)
            {
            <tr>
                <td>@emp.Apellido</td>
                <td>@emp.Oficio</td>
                <td>@emp.Salario</td>
            </tr>
            }
        </tbody>
    </table>
}